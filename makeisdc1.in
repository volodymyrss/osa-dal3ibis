C_EXEC_1_SOURCES	= samplec.c
C_EXEC_1_OBJECTS	= samplec.o
C_EXEC_1_LIBRARIES	= -ldal3ibis -ldal3gen -ldal -lcfitsio ${LAST_LIBS}

